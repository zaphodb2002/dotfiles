# Files
data.location=~/.task


#data.location=~/.local/share/task
#hooks.location=~/.config/task/hooks

# news.version=2.6.0

# Reports
## Next: The default report.  This is the primary working report
report.next.labels=ID,Urgency,Desc,Due,Tags,Scheduled,Project
report.next.columns=id,urgency,description.count,due.relative,tags,scheduled,project
### Anything ready
report.next.filter=+READY limit:5 end:
### Sorted by urgency
report.next.sort=urgency-,due+

## Now: Things that need to be done today
report.now.description=what needs doing now
report.now.labels=ID,Urgency,Desc,Due,Tags,Scheduled,Project
report.now.columns=id,urgency,description.count,due.relative,tags,scheduled,project
### scheduled or due today
report.now.filter=due:today end: +READY limit:5
report.now.sort=urgency-,due-

## Overdue
report.overdue.labels=ID,Urgency,Desc,Due,Tags,Scheduled,Project
report.overdue.columns=id,urgency,description.count,due.relative,tags,scheduled,project
report.overdue.filter=(scheduled.before:today or (scheduled: due.before:today) ) end: -TEMPLATE

## Scheduling
report.scheduling.labels=ID,Urgency,Desc,Due,Tags,Scheduled,Project
report.scheduling.columns=id,urgency,description.count,due.relative,tags,scheduled,project
report.scheduling.filter=end: -TEMPLATE
report.scheduling.sort=scheduled+,due+,urgency-

report.templates.description=master recurrence templates
report.templates.columns=uuid.short,project,description.desc,recur,wait,due,until,tags
report.templates.filter=+TEMPLATE status:recurring
report.templates.sort=project+/,recur+/,wait-,due-

report.week.description=This Week
report.week.columns=id,description.count,due.relative,project,tags,scheduled.relative
report.week.filter=(scheduled.after:sow scheduled.before:eow) or (scheduled: due.after:sow due.before:eow) +READY limit:page
report.week.sort=urgency-

default.command=next
default.project=LMS.Inbox
default.due=someday

dateformat=YWVaHN

