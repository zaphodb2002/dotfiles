<Bindings>
	<Binding name="BETTERWARDROBE_PREVIEW_SCROLL_UP" hidden="true">
		local BetterWardrobe = LibStub("AceAddon-3.0"):GetAddon("BetterWardrobe")
		BetterWardrobe.preview.previewModel:SetFacing(BetterWardrobe.preview.previewModel:GetFacing() +.1)
	</Binding>
	<Binding name="BETTERWARDROBE_PREVIEW_SCROLL_DOWN" hidden="true">
		local BetterWardrobe = LibStub("AceAddon-3.0"):GetAddon("BetterWardrobe")
		BetterWardrobe.preview.previewModel:SetFacing(BetterWardrobe.preview.previewModel:GetFacing() -.1)
	</Binding>

	<Binding name= "BETTERWARDROBE_BINDING_TOGGLE_DRESSINGROOM" hidden="false" category="BINDING_HEADER_BETTERWARDROBE">
		BetterWardrobe:ToggleDressingRoom()
	</Binding>

	<Binding name= "BETTERWARDROBE_BINDING_TARGETGEAR" hidden="false"  category="BINDING_HEADER_BETTERWARDROBE">
		DressUpFrame_Show(DressUpFrame)
		BetterWardrobe:SetTargetGear()
	</Binding>
	<Binding name= "BETTERWARDROBE_BINDING_TARGETMODEL" hidden="false" category="BINDING_HEADER_BETTERWARDROBE">
		DressUpFrame_Show(DressUpFrame)
		BetterWardrobe:SetTarget()
	</Binding>
	<Binding name= "BETTERWARDROBE_BINDING_PLAYERMODEL" hidden="false" category="BINDING_HEADER_BETTERWARDROBE">
		DressUpFrame_Show(DressUpFrame)
		BetterWardrobe:SetTargetGear(true)	
	</Binding>
</Bindings>